    "version": "0.2.0",
    "configurations": [
        {
            "name": "mailica (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-mailica",
            "program": "${workspaceFolder}/src/mailica/bin/Debug/net6.0/mailica.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src",
            "stopAtEntry": false,
            // "serverReadyAction": {
            //     "action": "openExternally",
            //     "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            // },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://+:5000",
                "DEBUG": "1"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "tester",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-tester",
            "program": "${workspaceFolder}/src/tester/bin/Debug/net6.0/tester.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }
    ]
}